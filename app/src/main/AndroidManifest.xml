<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.foodlover">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".HelperClass.AppController"
        android:allowBackup="true"
        android:icon="@drawable/food"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodLover"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activites.WishList"></activity>
        <activity
            android:name=".Activites.PurchaseHistory"
            android:label="Purchase History" />
        <activity
            android:name=".Activites.Product"
            android:label="Product" />
        <activity
            android:name=".Activites.Login"
            android:label="Login" />
        <activity
            android:name=".Activites.Profile"
            android:label="Profile" />
        <activity
            android:name=".Activites.ForgetPassword"
            android:label="Forget Password" />
        <activity
            android:name=".Activites.SignUp"
            android:label="SignUp" />
        <activity
            android:name=".Activites.Home"
            android:label="Home" />
        <activity android:name=".Activites.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>