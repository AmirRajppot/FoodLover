<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/card_bg_horizontal"
            android:elevation="2dp">

            <RelativeLayout
                android:id="@+id/relative_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/deal_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:layout_marginHorizontal="8dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/black"
                        android:textSize="16sp" />


                    <ImageView
                        android:id="@+id/deal_btn_plus_light"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginBottom="5dp"
                        android:elevation="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="60dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_baseline_add_shopping_cart_24" />

                    <ImageView
                        android:id="@+id/deal_btn_plus_dark"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:visibility="gone"
                        android:layout_marginEnd="60dp"
                        android:layout_marginTop="10dp"                        android:src="@drawable/ic_baseline_shopping_cart_24"
                        android:textColor="@color/white"
                        android:textStyle="bold" />



                <TextView
                    android:id="@+id/deal_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="6dp"
                    android:text="Price"
                    android:layout_below="@id/deal_name"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/deal_description"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/deal_price"
                    android:layout_marginHorizontal="8dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:padding="2dp"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </RelativeLayout>

        </RelativeLayout>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/deal_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:elevation="2dp"
            android:src="@drawable/pexcels" />

    </RelativeLayout>

</RelativeLayout>